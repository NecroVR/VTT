{
  "name": "@vtt/shared",
  "version": "0.0.0",
  "private": true,
  "description": "Shared types, utilities, and constants for VTT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dice": {
      "import": "./dist/dice/index.js",
      "types": "./dist/dice/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "pnpm --dir ../.. exec tsc --project packages/shared/tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "clean": "rm -rf dist node_modules"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "type": "module"
}
