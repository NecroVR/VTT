{
  "name": "@vtt/server",
  "version": "0.0.0",
  "private": true,
  "description": "VTT Fastify backend server",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "pnpm --dir ../.. exec tsc --project apps/server/tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "clean": "rm -rf dist node_modules",
    "seed:dnd5e": "tsx src/scripts/seedDnd5eModule.ts",
    "seed:forms": "tsx src/scripts/seedDefaultForms.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^8.3.0",
    "@fastify/websocket": "^11.0.1",
    "@types/multer": "^2.0.0",
    "@vtt/database": "workspace:*",
    "@vtt/shared": "workspace:*",
    "adm-zip": "^0.5.16",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.37.0",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "multer": "^2.0.2",
    "p-limit": "^7.2.0",
    "sharp": "^0.34.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^22.10.2",
    "@types/sharp": "^0.32.0",
    "@types/ws": "^8.18.1",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "type": "module"
}
