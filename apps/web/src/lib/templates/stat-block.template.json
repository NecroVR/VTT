                },
                "allowReorder": true,
                "allowDelete": true,
                "itemTemplate": [
                  {
                    "id": "ability-name",
                    "type": "field",
                    "fieldType": "text",
                    "binding": "name",
                    "label": {
                      "literal": "Ability Name"
                    }
                  },
                  {
                    "id": "ability-description",
                    "type": "field",
