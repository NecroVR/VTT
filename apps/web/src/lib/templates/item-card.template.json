{
  "exportVersion": "1.0",
  "exportedAt": "2025-12-12T00:00:00.000Z",
  "form": {
    "name": "Item Card",
    "description": "A basic item card template with name, image, description, and properties",
    "entityType": "item",
    "version": 1,
    "layout": [
      {
        "id": "root-container",
        "type": "container",
        "children": [
          {
            "id": "item-header",
            "type": "flex",
            "direction": "row",
            "gap": "1rem",
            "align": "flex-start",
            "children": [
              {
                "id": "item-image",
                "type": "field",
                "fieldType": "image",
                "binding": "image",
                "label": {
                  "literal": "Item Image"
                },
                "options": {
                  "accept": "image/*",
                  "maxSize": 5242880
                }
              },
              {
                "id": "item-info",
                "type": "container",
                "style": {
                  "flex": "1"
                },
                "children": [
                  {
                    "id": "name-field",
                    "type": "field",
                    "fieldType": "text",
                    "binding": "name",
                    "label": {
                      "literal": "Item Name"
                    },
                    "required": true,
                    "options": {
                      "placeholder": {
                        "literal": "Enter item name..."
                      }
                    }
                  },
                  {
                    "id": "type-field",
                    "type": "field",
                    "fieldType": "select",
                    "binding": "itemType",
                    "label": {
                      "literal": "Item Type"
                    },
                    "options": {
                      "options": [
                        {
                          "value": "weapon",
                          "label": {
                            "literal": "Weapon"
                          }
                        },
                        {
                          "value": "armor",
                          "label": {
                            "literal": "Armor"
                          }
                        },
                        {
                          "value": "consumable",
                          "label": {
                            "literal": "Consumable"
                          }
                        },
                        {
                          "value": "tool",
                          "label": {
                            "literal": "Tool"
                          }
                        },
                        {
                          "value": "treasure",
                          "label": {
                            "literal": "Treasure"
                          }
                        },
                        {
                          "value": "other",
                          "label": {
                            "literal": "Other"
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            ]
          },
          {
            "id": "description-section",
            "type": "section",
            "title": {
              "literal": "Description"
            },
            "collapsible": true,
            "defaultCollapsed": false,
            "children": [
              {
                "id": "description-field",
                "type": "field",
                "fieldType": "richtext",
                "binding": "description",
                "label": {
                  "literal": "Description"
                },
                "options": {
                  "showPreview": true,
                  "placeholder": {
                    "literal": "Describe this item..."
                  }
                }
              }
            ]
          },
          {
            "id": "properties-section",
            "type": "section",
            "title": {
              "literal": "Properties"
            },
            "collapsible": true,
            "defaultCollapsed": false,
            "children": [
              {
                "id": "properties-grid",
                "type": "grid",
                "columns": 2,
                "gap": "1rem",
                "children": [
                  {
                    "id": "weight-field",
                    "type": "field",
                    "fieldType": "number",
                    "binding": "weight",
                    "label": {
                      "literal": "Weight (lbs)"
                    },
                    "options": {
                      "min": 0,
                      "step": 0.1
                    }
                  },
                  {
                    "id": "value-field",
                    "type": "field",
                    "fieldType": "number",
                    "binding": "value",
                    "label": {
                      "literal": "Value (gp)"
                    },
                    "options": {
                      "min": 0,
                      "step": 1
                    }
                  },
                  {
                    "id": "quantity-field",
                    "type": "field",
                    "fieldType": "number",
                    "binding": "quantity",
                    "label": {
                      "literal": "Quantity"
                    },
                    "options": {
                      "min": 1,
                      "step": 1
                    }
                  },
                  {
                    "id": "rarity-field",
                    "type": "field",
                    "fieldType": "select",
                    "binding": "rarity",
                    "label": {
                      "literal": "Rarity"
                    },
                    "options": {
                      "options": [
                        {
                          "value": "common",
                          "label": {
                            "literal": "Common"
                          }
                        },
                        {
                          "value": "uncommon",
                          "label": {
                            "literal": "Uncommon"
                          }
                        },
                        {
                          "value": "rare",
                          "label": {
                            "literal": "Rare"
                          }
                        },
                        {
                          "value": "very-rare",
                          "label": {
                            "literal": "Very Rare"
                          }
                        },
                        {
                          "value": "legendary",
                          "label": {
                            "literal": "Legendary"
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    ],
    "fragments": [],
    "computedFields": [],
    "styles": {
      "theme": "default"
    }
  },
  "metadata": {
    "license": "free",
    "notes": "Basic item card template for inventory items"
  }
}
