{
  "manifest_version": 3,
  "name": "VTT Content Importer",
  "version": "1.0.0",
  "description": "Import content from D&D Beyond to VTT",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://www.dndbeyond.com/*",
    "https://dndbeyond.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.dndbeyond.com/*", "https://dndbeyond.com/*"],
      "js": ["content/ddb-inject.js"],
      "css": ["content/ddb-inject.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
