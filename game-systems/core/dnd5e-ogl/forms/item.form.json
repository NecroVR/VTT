  "computedFields": [
    {
      "id": "total-ac",
      "name": "Total Armor Class",
      "description": "Calculated total AC for armor including magical bonuses",
      "formula": "(data.armor.baseAC || 0) + (data.armor.acBonus || 0)",
      "resultType": "number",
      "dependencies": ["data.armor.baseAC", "data.armor.acBonus"]
    },
    {
      "id": "total-attack-bonus",
      "name": "Total Attack Bonus",
      "description": "Calculated total attack bonus for weapons including magical bonuses",
      "formula": "(data.weapon.attackBonus || 0) + (data.magical.bonus || 0)",
      "resultType": "number",
      "dependencies": ["data.weapon.attackBonus", "data.magical.bonus"]
    },
    {
      "id": "total-damage-bonus",
      "name": "Total Damage Bonus",
      "description": "Calculated total damage bonus for weapons including magical bonuses",
      "formula": "(data.weapon.damage.bonus || 0) + (data.magical.bonus || 0)",
